<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" type="text/css" rel="stylesheet">
    <link href="~/lib/bootstrap/dist/css/bootstrap-theme.min.css" type="text/css" rel="stylesheet">
    <script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
</head>
<body>
    @using System.Security.Claims
    <div class="navbar container">
        @if (User.IsSignedIn())
        {
            @using (Html.BeginForm("LogOff", "Account"))
            {
                <p>
                    Welcome, @User.GetUserName()
                    <input type="submit" class="btn btn-default" value="Log out" />
                </p>
            }
        }
        else
        {
            <p>@Html.ActionLink("Register", "Register") | @Html.ActionLink("Log in", "Login")</p>

        }
    </div>
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
