@model PNP.Models.Story
@using System.Security.Claims

    <hr />
    <h4>Create a new story</h4>
    @using (Html.BeginForm())
    {
        <input type="hidden" name="Name" id="Name" value=@User.GetUserName()>
        <input id="PostId" type="hidden" name="PostId" value=@ViewBag.StoryId />

        @Html.LabelFor(model => model.Title)
        @Html.TextAreaFor(model => model.Title)

        @Html.LabelFor(model => model.Content)
        @Html.TextAreaFor(model => model.Content)
        <input type="submit" value="Add new story" />
    }
    <p>@Html.ActionLink("Back to list", "Index")</p>
